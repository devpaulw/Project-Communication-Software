<UserControl x:Class="PCS.WPFClientInterface.MessageField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCS.WPFClientInterface"
             mc:Ignorable="d" d:DesignWidth="415.417" d:DesignHeight="308.916" >
    <Grid>
        <RichTextBox x:Name="fieldRtb" IsReadOnly="True" Background="#BF000000" Foreground="White" VerticalScrollBarVisibility="Visible" VerticalContentAlignment="Bottom" Grid.ColumnSpan="2" Grid.RowSpan="2" ContextMenuOpening="fieldRtb_ContextMenuOpening">
            <RichTextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Modify" Command=""/>

                    <MenuItem Header="Delete" Click="DeleteMessage_Click"/>
                    <Separator/>
                    <MenuItem Header="Details"/>

                </ContextMenu>
            </RichTextBox.ContextMenu>
            
        </RichTextBox>
    </Grid>
    <UserControl.Resources>
    </UserControl.Resources>
</UserControl>
