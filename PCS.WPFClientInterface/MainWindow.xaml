<Window x:Class="PCS.WPFClientInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZSGP.WPFClientInterface"
        mc:Ignorable="d"
        Title="Project Communication Software" Height="450" Width="726.091">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="#FFFFB900" Offset="1"/>
            <GradientStop Color="White" Offset="0.562"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="375*"/>
            <ColumnDefinition Width="92*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="197,385,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Grid.ColumnSpan="2"/>

        <TextBlock HorizontalAlignment="Left" Height="370" Margin="197,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="511" Grid.ColumnSpan="3">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#BFFFF3A6"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>

        <Button Content="Send" HorizontalAlignment="Left" Margin="348,385,0,0" VerticalAlignment="Top" Width="38" Height="24" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="+Resource" HorizontalAlignment="Left" Margin="16.374,385,0,0" VerticalAlignment="Top" Width="66" Height="24" Grid.Column="2"/>
        <TextBox x:Name="ipAddressTextBox" HorizontalAlignment="Left" Height="22" Margin="69,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
        <Label Content="IP Address:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="37" Width="75" Margin="0,2,0,0"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Height="22" Margin="10,62,0,0" VerticalAlignment="Top" Width="149" RenderTransformOrigin="0.653,-0.208" Click="Button_Click"/>
        <Label Content="Status: " HorizontalAlignment="Left" VerticalAlignment="Top" Height="37" Width="75" Margin="12,126,0,0"/>
        <Label x:Name="statusLabel" Content="[Status]" HorizontalAlignment="Left" VerticalAlignment="Top" Height="37" Width="75" Margin="52,126,0,0"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="370" Margin="197,10,0,0" VerticalAlignment="Top" Width="511"/>
        <TextBox x:Name="portTextBox" HorizontalAlignment="Left" Height="22" Margin="69,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
        <Label Content="Port:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="37" Width="75" Margin="31,30,0,0"/>
    </Grid>
</Window>
