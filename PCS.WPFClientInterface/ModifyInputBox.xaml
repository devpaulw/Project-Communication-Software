<Window x:Class="PCS.WPFClientInterface.ModifyInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCS.WPFClientInterface"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Modify your message..." Height="199.321" Width="419.701">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Modify your message:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="382"/>
        <TextBox x:Name="messageTextBox" TextWrapping="Wrap" RenderTransformOrigin="0.041,0.63" Margin="10,31,10,0"  Height="98" VerticalAlignment="Top" AcceptsReturn="True"/>
        <Button x:Name="modifyBtn" IsDefault="True" Content="Modify" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="329,134,0,0" Height="26" Click="ModifyBtn_Click"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="249,134,0,0" Click="CancelBtn_Click"/>

    </Grid>
</Window>
